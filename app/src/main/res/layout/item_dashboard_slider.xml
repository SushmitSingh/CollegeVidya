<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.app.collegevidya.data.viewmodel.SelectProductViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="@dimen/_240sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_height="@dimen/_130sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/dash_image"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/ic_corner_round_2dp"
                android:backgroundTint="@color/text_blue_light"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:letterSpacing="0.04"
                android:text="1/5"
                android:textColor="@color/white_text"
                android:paddingTop="1dp"
                android:textSize="@dimen/text_9px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/roboto_regular"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:text="Got any Question on\nOnline &amp; Distance\nEducation?\nGive us a Call "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_11sdp"
                android:letterSpacing="0.04"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/number"
                android:textSize="@dimen/text_16px"
                android:textColor="@color/red_text"
                android:textStyle="bold"
                android:letterSpacing="0.04"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

